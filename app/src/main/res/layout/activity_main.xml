<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buton9"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/buton6"
        app:layout_constraintStart_toEndOf="@+id/buton8" />

    <Button
        android:id="@+id/buton8"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/buton5"
        app:layout_constraintStart_toEndOf="@+id/buton7" />

    <Button
        android:id="@+id/buton7"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/buton4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buton6"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/buton3"
        app:layout_constraintStart_toEndOf="@+id/buton5" />

    <Button
        android:id="@+id/buton5"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/buton2"
        app:layout_constraintStart_toEndOf="@+id/buton4" />

    <Button
        android:id="@+id/buton4"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/buton1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buton3"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/buton0"
        app:layout_constraintStart_toEndOf="@+id/buton2" />

    <Button
        android:id="@+id/buton2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/buton0"
        app:layout_constraintStart_toEndOf="@+id/buton1" />

    <Button
        android:id="@+id/buton1"
        android:layout_width="80sp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/buton0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buton0"
        android:layout_width="264dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonEsittir"
        android:layout_width="80dp"
        android:layout_height="106dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="="
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonTopla"
        android:layout_width="80dp"
        android:layout_height="106dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="+"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEsittir"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sonucEkrani"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTemizle"
        android:layout_width="264dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@+id/buton8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonGerial"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="10sp"
        app:icon="@drawable/gerial_icon"
        app:layout_constraintBottom_toTopOf="@+id/buton9"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>